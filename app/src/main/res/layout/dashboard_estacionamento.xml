<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/containner_estacionamento"
    android:layout_height="80dp">

    <LinearLayout
        android:id="@+id/frame_btn_estacionamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dashboard_btn_estacionamento"
            android:layout_width="@dimen/size_image_dashboard"
            android:layout_height="50dp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_estacionamento" />

        <TextView
            android:id="@+id/text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Estacion."/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_estacionamento"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/dashboard_estacionamentoI"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Capacidade"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/img_estacionamentoI"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_dashboard_vagas_indisponiveis"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_estacionamentoI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:text="Total: "
                        android:textSize="12dp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:id="@+id/dashboard_estacionamentoII"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DisponÃ­veis "/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/img_estacionamentoII"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_dashboard_vagas_disponiveis"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_estacionamentoII"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:text="Total: "
                        android:textSize="12dp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>